
<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view" style="background-color: #2A3F54">

      <div class="navbar nav_title" style="border: 0;">
        <a href="index.html" class="site_title">
          <i class="fa fa-lock"></i> <span>SecBitEx</span></a>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%= image_tag "http://placehold.it/48x48", :class => "img-circle profile_img"  %>
        </div>
        <div class="profile_info">
          <span>Welcome,</span>
          <h2><%= current_user.name %></h2>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section" style="margin-top: 100px">
          <h3>Menu</h3>
          <ul class="nav side-menu">
            <li class=<%= "#{current_page?(dashboard_path) ? 'active' : 'nil'} " %>><a href='/dashboard'><i class="fa fa-dashboard"></i> Dashboard </a>
            </li>
            <li class=<%= "#{current_page?(dashboard_buy_path) ? 'active' : 'nil'} " %>><a href='/dashboard/buy'><i class="fa fa-btc"></i> Buy Bitcoins</a>
            </li>
            <li class=<%= "#{current_page?(dashboard_sell_path) ? 'active' : 'nil'} " %>><a href='/dashboard/sell'><i class="fa fa-btc"></i> Sell Bitcoins</a>
            </li>
            <li class=<%= "#{current_page?(dashboard_settings_path) ? 'active' : 'nil'} " %>><a href='/dashboard/settings'><i class="fa fa-cog"></i> Exchange Settings</a>
            </li>
          </ul>
        </div>
      </div>
      <!-- /sidebar menu -->

      <!-- /menu footer buttons -->
      <div class="sidebar-footer hidden-small" style="padding-top: 100%; z-index: -1">
        <h5 class="text-center">Account</h5>
        <%= link_to 'Settings', edit_user_registration_path, :style => 'width: 50%' %>
        <%= link_to 'Logout', destroy_user_session_path, :method=>'delete', :style => 'width: 50%'  %>
      </div>
      <!-- /menu footer buttons -->
    </div>
  </div>
